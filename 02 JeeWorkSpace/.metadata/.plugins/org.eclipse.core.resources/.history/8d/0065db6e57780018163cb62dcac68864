--userid, password, name, ssn, regidate, phone, email, profile, access_num, credit_rating, addr_seq, account_seq


-- 전체 테이블 조회
SELECT * FROM TAB;

-- 테이블 삭제
DROP TABLE member;

-- 데이터베이스 테이블 생성
CREATE TABLE member(
	userid VARCHAR2(20) PRIMARY KEY,
	password VARCHAR2(20),
	name VARCHAR2(20),
	ssn VARCHAR2(8),
	regidate DATE,
	phone VARCHAR2(13),
	email VARCHAR2(20),
	profile VARCHAR2(8),
	access_num VARCHAR2(8),
	credit_rating DECIMAL,
	addr_seq DECIMAL,
	account_seq DECIMAL
);


-- 데이터베이스 객체 생성
INSERT INTO member
(
	userid, password, name, ssn, regidate, phone, 
	email, profile, access_num, credit_rating, addr_seq, account_seq
) 

VALUES
(
	'kim', '1', '김유신', '900101-1', SYSDATE, '010-1234-1234',
	'kim@test.com', 'kim.jpg', '', 5, 1000, 1000 
);

-- 데이터베이스 객체 생성
INSERT INTO member
(
	userid, password, name, ssn, regidate, phone, 
	email, profile, access_num, credit_rating, addr_seq, account_seq
) 

VALUES
(
	'lee', '1', '이순신', '890301-1', SYSDATE, '010-1234-4444',
	'lee@test.com', 'lee.jpg', '', 5, 1001, 1001 
);

-- 데이타베이스 객체 조회
SELECT * FROM member;

-- JOIN
SELECT * FROM member, account
WHERE member.account_seq = account.account_seq
AND member.userid = 'kim'
;
